<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
            <corners
                android:radius="20dp" />
        </shape>

    </item>
    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners
                android:radius="0dp" />
            <gradient
                android:startColor="#bcecff"
                android:endColor="#c2bbff"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>
